{
  "compilerOptions": {
    "declarationDir": "lib",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
    "module": "esnext",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports":true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
